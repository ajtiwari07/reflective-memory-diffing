{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Reflective Memory Snapshot",
  "type": "object",
  "required": ["entries"],
  "properties": {
    "snapshot_id": { "type": "string" },
    "timestamp": { "type": "string" },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["content", "source"],
        "properties": {
          "id": { "type": "string" },
          "entry_id": { "type": "string" },
          "content": { "type": "string" },
          "source": { "type": "string" },
          "confidence": { "type": "number", "minimum": 0.0, "maximum": 1.0 },
          "timestamp": { "type": "string" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "metadata": { "type": "object" },
          "embedding": {
            "type": "array",
            "items": { "type": "number" }
          }
        },
        "additionalProperties": true
      }
    },
    "metadata": { "type": "object" }
  },
  "additionalProperties": true
}
